// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Post {
  id        Int      @id @default(autoincrement())
  slug      String   @unique
  likes     Int      @default(0)
  views     Int      @default(0)
  createdAt DateTime @default(now())
}

model Session {
  id        String   @id @default(uuid())
  likes     Int      @default(0)
  createdAt DateTime @default(now())
}